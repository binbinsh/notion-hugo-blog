baseURL = 'https://example.com/'
languageCode = 'en-us'
title = 'My Blog'
theme = 'PaperMod'  # or any other theme

# Basic configuration
[pagination]
  pagerSize = 10
enableEmoji = true

[params]
  description = "My personal blog"
  author = "Your Name"
  ShowReadingTime = true
  ShowCodeCopyButtons = true
  ShowPostNavLinks = true

# Menu configuration
[menu]
  [[menu.main]]
    name = "Home"
    url = "/"
    weight = 1

  [[menu.main]]
    name = "Posts"
    url = "/posts/"
    weight = 2

  [[menu.main]]
    name = "Tags"
    url = "/tags/"
    weight = 3

[taxonomies]
  tag = "tags"

# Syntax highlighting
[markup]
  [markup.highlight]
    style = 'monokai'

  [markup.goldmark.renderer]
    unsafe = true  # Allow HTML
